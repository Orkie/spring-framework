	<lang:clojure id="calculator" immutable-properties="true">
		<lang:inline-script>
		(reify org.springframework.scripting.Calculator
					(add [this x y]
						(+ x y)))
		</lang:inline-script>
		<lang:property name="message" value="Hello World!"/>
	</lang:clojure>
	
	<lang:clojure id="messenger" script-source="classpath:org/springframework/scripting/clojure/Messenger.clj" immutable-properties="true">
		<lang:property name="message" value="Hello World!"/>
		<lang:property name="thecalc" ref="calculator" />
	</lang:clojure>

